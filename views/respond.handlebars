{{> nav/navbar-block}}
<div class="container">
    {{!-- Div to display settles --}}
    <div class="row">
        <div class="col s12 settleDiv">
            <h2>Let 'em know what you think!</h2>

            <div class="row">
                <form class="col s12">

                    {{!-- Settle Title --}}
                    <div class="row">
                        <div class="col s6 responseTitle">
                            <h4>{{SettleIts.Topic}}</h4>
                        </div>
                    </div>

                    {{!-- Side A --}}
                    <div class="row">
                        <div class="input-field col s12">
                            <p>{{SettleIts.Side_A}}</p>
                        </div>
                    </div>

                    {{!-- Side B Textbox --}}
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="textarea2" class="materialize-textarea" data-length="300"></textarea>
                            <label for="textarea2">Tell us your side</label>
                        </div>
                    </div>
                    
                    {{!-- Submit Button --}}
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="fas fa-chevron-circle-right"></i>
                    </button>

                </form>
            </div>

        </div>
    </div>
</div>  