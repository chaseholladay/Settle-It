<ul class="collapsible">
    <li>
        <!-- Header -->
        <div class="collapsible-header">{{ this.Topic }}</div>
        <!-- Body -->
        <div class="collapsible-body">
            <div class="row">
                <!-- Left Section - Settle Side A -->
                <div class="col s4">
                    <p>
                        {{ this.Side_A }}
                    </p>
                </div>
                {{!-- Middle Section --}}
                <div class="col s4">

                    <!-- Arrows to vote -->
                    <div class="row center-align">
                        <div class="col s6">
                            <i class="fas fa-arrow-left fa-5x voteA" data-settleId="{{ this.id }}"></i>
                        </div>
                        <div class="col s6">
                            <i class="fas fa-arrow-right fa-5x voteB" data-settleId="{{ this.id }}"></i>
                        </div>
                    </div>

                    <!-- Vote Scores -->
                    <div class="row">
                        <div class="col s6">
                            <p>
                                {{ this.Side_A_Points }}
                            </p>
                        </div>
                        <div class="col s6">
                            <p>
                                {{ this.Side_B_Points }}
                            </p>
                        </div>
                    </div>

                    <!-- Row to display pie chart -->
                    <div class="row">

                    </div>
                </div>

                {{!-- Settle Side B --}}
                <div class="col s4">
                    <p>
                        {{ this.Side_B }}
                    </p>
                </div>
            </div>               
        </div>
    </li>
</ul>