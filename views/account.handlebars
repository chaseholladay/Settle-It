{{> nav/navbar-block}}
<div class="container">
    <div class="row center-align">
        <div class="col s10 userHead">
            <h3>Your Settles</h3>
        </div>
    </div>
    <!-- Div to display settles -->
    <div class="row">
        <div class="col s12 settleDiv">

            {{#each SettleIts}}
                {{> settle/settle-block}}
            {{/each}}

        </div>
    </div>


    <div class="row center-align">
        <div class="col s10 userHead">
            <h3>Waiting Response</h3>
        </div>
    </div>
    <!-- Div to display settles -->
    <div class="row">
        <div class="col s12 settleDiv">

        {{#each Respond}}
            <ul class="collapsible">
                <li>
                    <!-- Header -->
                    <div class="collapsible-header">{{ this.Topic }}</div>
                    <!-- Body -->
                    <div class="collapsible-body">
                        <div class="row">
                            <!-- Left Section - Settle Side A -->
                            <div class="col s4">
                                <p>
                                    {{ this.Side_A }}
                                </p>
                            </div>

                            {{!-- Settle Side B --}}
                            <div class="col s8">
                                {{!-- Side B Textbox --}}
                                <form class="addSideBForm" id="{{this.id}}">
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <textarea id="settle{{this.id}}" class="materialize-textarea" data-length="300"></textarea>
                                            <label for="settle{{this.id}}">Tell us your side</label>
                                        </div>
                                    </div>
                                    
                                    {{!-- Submit Button --}}
                                    <button class="btn waves-effect waves-light" type="submit">Submit
                                        <i class="fas fa-chevron-circle-right"></i>
                                    </button>
                                </form>
                            </div>
                        </div>               
                    </div>
                </li>
            </ul>
        {{/each}}

        </div>
    </div>



   

</div>  